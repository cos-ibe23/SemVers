{
  "name": "imbod-backend-api",
  "version": "1.0.0",
  "description": "Imbod Shipping & Logistics Platform API",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:better-auth:generate": "npx @better-auth/cli@latest generate --config src/db/auth.ts --output src/db/schema/auth.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:test:push": "NODE_ENV=test drizzle-kit push",
    "db:test:migrate": "NODE_ENV=test drizzle-kit migrate",
    "lint": "eslint",
    "test": "vitest",
    "test:run": "vitest run",
    "test:integration": "npm run db:test:push && vitest run"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@hono/zod-openapi": "^0.19.6",
    "@scalar/hono-api-reference": "^0.5.175",
    "better-auth": "^1.3.7",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "dotenv-expand": "^12.0.1",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.8.2",
    "hono": "^4.8.10",
    "hono-pino": "^0.7.0",
    "http-status-codes": "^2.3.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "postgres": "^3.4.7",
    "slugify": "^1.6.6",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.22.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
